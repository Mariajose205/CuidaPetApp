<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgFotoMascotaItem"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_pet_placeholder"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvNombreMascotaItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la Mascota"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvRazaMascotaItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raza"/>

            <TextView
                android:id="@+id/tvEdadMascotaItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad"/>

            <TextView
                android:id="@+id/tvPesoMascotaItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peso"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
